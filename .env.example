# Copy to .env and fill in real values for production
# Stripe
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Webhook/server URLs used in Stripe checkout
SUCCESS_URL=https://yourdomain.com/thank-you
CANCEL_URL=https://yourdomain.com/cancelled

# Email (SMTP) - optional. If not set, a dev Ethereal account will be used and preview URL printed.
EMAIL_HOST=smtp.yourmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your@email.com
EMAIL_PASS=your_email_password
EMAIL_FROM="Beats By M.A.J." <no-reply@yourdomain.com>

PORT=4242

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2a$10$... # Generate with: node -e "console.log(require('bcryptjs').hashSync('yourpassword', 10))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Dev API Key (optional, for /dev/simulate-purchase endpoint)
DEV_API_KEY=dev_secret_key_here
